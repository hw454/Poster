%-------------- Third Block
\newcommand{\MathematicalMotivation}{
\begin{block}{Mathematical motivation}
\setbeamercolor{item}{fg=\blockitem}
\captionsetup[figure]{labelfont={color=\blockcaption}}
\begin{itemize}
\item A time-independent model for wave propagation is the 
\textbf{Helmholtz equation}:
\begin{equation}
\nabla^2 \phi(x)+{\underbrace{k}_{\substack{\text{Wave} \\ \text{number}}}}^2 \phi(x)=0.
\end{equation}
\item Where $k$ is the wave number given by $$k=\frac{2\pi}{\lambda}=\frac{2 \pi f}{c}, $$ $f$ is the frequency of the wave, and $c$ the velocity.
\item Assuming that $\phi(x)$ can be written as a function of the path $S(x)$ in the form $\phi=u(x)e^{i k S(x)}$ then $u$ satisfies,
\begin{equation}
\frac{1}{k^2}\nabla^2 u - u \left( |\nabla S|^2-1 \right)=0
\end{equation} 
Since $k \gg 1$, $S(x)$ satisfies the \textbf{Eikonal Equation}:
\begin{equation}
{|\nabla S|}^2=1 \Rightarrow |\nabla S|=1
\end{equation}
The constant gradient means that a ray is a valid approximation for the wave propagation when $k\gg 1$.
\end{itemize}
\end{block}
}

