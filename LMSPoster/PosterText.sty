%-------------- Third Block
\newcommand{\MathematicalMotivation}{
\begin{alertblock}{Mathematical motivation}
\alertblockcolours
\begin{itemize}
\item A model for electromagnetic field strength is the 
\textbf{Helmholtz equation}:
\begin{equation}
\nabla^2 \phi(x)+{\underbrace{k}_{\substack{\text{Wave} \\ \text{number}}}}^2 \phi(x)=0.
\end{equation}
\item Where $k$ is the wave number given by $$k=\frac{2\pi}{\lambda}=\frac{2 \pi \text{ frequency}}{\text{speed of light}}.$$
\item Using the WKB ansatz $\phi=u(x)e^{i k S(x)}$,
\begin{equation}
\frac{1}{k^2}\lapla u - \left( |\nabla S|^2-1 +\frac{i}{k}\left(2(\grad S \cdot \grad)+\lapla S \right) \right)u =0
\end{equation} 
Using the expansion $u=u_0 + \frac{1}{k}u_1+\frac{1}{k^2}u_2+...$ 
\begin{subequations}
\begin{multline}
 O(k^2): \ \ \  e^{ikS(x)} \biggl(  1-|\grad S(x)|^2 \biggr) u_0(x)  =0   \nonumber
 \end{multline}
 \begin{multline}
 O(k): \ \ \ e^{ikS(x)}  \Biggl( \left(1-|\grad S(x)|^2 \right) u_1(x)  
\\+ i \biggl( 2i\left(\grad S \cdot \grad \right) u_0(x) +\lapla S(x) u_0(x)) \Biggr)   =0 \nonumber
\end{multline}
\begin{multline}
 O(k^0):  e^{ikS(x)} \Biggl(\lapla u_0(x)+\left(1-|\grad S(x)|^2 \right) u_2(x) \\ +i\biggl(  2\left(\grad S \cdot \grad \right) u_1(x)+\lapla S(x) \biggr)
\Biggr)  =0.
\nonumber
\end{multline}
\label{eqn::kordersexpan}
\end{subequations}
Since $k \gg 1$, $S(x)$ satisfies the \textbf{Eikonal Equation}:
\begin{equation}
{|\nabla S|}^2=1 \Rightarrow |\nabla S|=1
\end{equation}
A solution to the Eikonal equation is that the path $S(x)$ is a straight line.
\end{itemize}
\end{alertblock}
}

